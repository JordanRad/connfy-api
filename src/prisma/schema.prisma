// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./connfy.db"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String
  notes    Note[]
  password String   @default("password")
  invites  Invite[]
}

model Note {
  id          Int      @id @default(autoincrement())
  description String
  meeting     Meeting  @relation(fields: [meetingId], references: [id])
  meetingId   Int
  user        User     @relation(fields: [userId], references: [id])
  userId      Int      @default(0)
  topic       Topic    @relation(fields: [topicId], references: [id])
  topicId     Int      @default(0)
  type        String   @default("SHARED")
  createdAt   DateTime @default(now())
}

model Meeting {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  description String
  createdAt   DateTime @default(now())
  date        String   @default("12.26.2021")
  startTime   String   @default("00:00")
  endTime     String   @default("01:00")
  notes       Note[]
  users       String
  invites     Invite[]
  channel     Channel  @relation(fields: [channelId], references: [id])
  channelId   Int      @default(0)
}

model Channel {
  id      Int       @id @default(autoincrement())
  meeting Meeting[]
  topics  String    @default("General")
  Topic   Topic[]
}

model Topic {
  id        Int     @id @default(autoincrement())
  name      String  @default("General")
  channel   Channel @relation(fields: [channelId], references: [id])
  channelId Int
  Note      Note[]
}

model Invite {
  id        Int     @id @default(autoincrement())
  meeting   Meeting @relation(fields: [meetingId], references: [id])
  meetingId Int
  user      User    @relation(fields: [userId], references: [id])
  userId    Int     @default(0)
  status    String  @default("UNKNOWN")
}

generator client {
  provider = "prisma-client-js"
}
